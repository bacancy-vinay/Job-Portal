<h1>Hii</h1>
<div class="container row">
  <% @job_posts.each do |post| %>
    <div class="col-md-12 ftco-animate">

      <div class="job-post-item bg-white p-4 d-block d-md-flex align-items-center">

        <div class="mb-4 mb-md-0 mr-5">
          <div class="job-post-item-header d-flex align-items-center">
            <h2 class="mr-3 text-black h3"><%= link_to post.job_title, company_job_post_path(post.company.id, post) %></h2>
            <div class="badge-wrap">
             <span class="bg-secondary text-white badge py-2 px-3"><%= post.job_type %></span>
            </div>
          </div>
          <div class="job-post-item-body d-block d-md-flex">
            <div><b>Salary : </b><%= post.salary_min %> - <%= post.salary_max %></div>
            <div class="ml-3"><span class="icon-layers"></span><b>Location : </b><%= post.location %></div>
          </div>
        </div>

        <div class="ml-auto d-flex">
          <%= link_to 'Apply Job' %>
          
        </div>
      </div>
    </div><!-- end -->
  <% end %>
</div>