<%= render 'nav' %>
<center>
<div class="mt-4">
  <h1>Job Details</h1>
</div>
</center>

<div class="container">
  <div class="ftco-section bg-light">
        <div class="container">
          <div class="row">
        
            <div class="col-md-12 col-lg-7 mb-5">
              <h3><%= @job_post.job_title %></h3><br>
              <div class="d-md-flex">
                <div><b>Job Type : </b><%= @job_post.job_type %></div>
                <div class="ml-4"><b>Location : </b><%= @job_post.location %></b></div>
              </div>
              <b>Salary : </b><%= @job_post.salary_min %> - <%= @job_post.salary_max %><br><br>
              <%= @job_post.description %><br><br>
              <b>Preferred Language : </b><%= @job_post.language %><br><br>
              <b>Required Skills </b><br><br><%= @job_post.required_skill %><br><br>
              <b>Extra Skills </b><br><br><%= @job_post.extra_skill %><br><br>
              <b>Last date to apply is <%= @job_post.last_apply_date.strftime("%d %b, %Y") %>.</b><br><br>

              <% if current_user %>
                <% if !current_company %>
                  <center><%= link_to 'Apply_Job', apply_job_user_job_post_path(current_user, @job_post), class: "btn btn-primary" %></center>
                <% end %>
              <% end %>
            </div>

            <div class="col-lg-5">
              <div class="p-4 mb-3 bg-white">
                <h3 class="h5 text-black mb-3">Company Info</h3>
                <p class="mt-3"><h3><%= @job_post.company.title %></h3><p>
                <p class="mb-0 font-weight-bold">Address</p>
                <p class="mb-4"><%= @job_post.company.address %>, <%= @job_post.company.city %></p>

                <p class="mb-0 font-weight-bold">Phone</p>
                <p class="mb-4"><%= @job_post.company.contact_no %></p>

                <p class="mb-0 font-weight-bold">Email Address</p>
                <p class="mb-4"><%= @job_post.company.email %></p>

                <p class="mb-0 font-weight-bold">Website</p>
                <p class="mb-0"><a href="https://<%= @job_post.company.website %>"><%= @job_post.company.website %></a></p>

              </div>
            </div>
          </div>
        </div>
      </div>

  <%= link_to 'Back' %>
</div>
