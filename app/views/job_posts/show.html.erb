<% if current_user %>
  <% if @applied.any? %>
    <center>
      <div class="mt-4">
        <h3>Your application applied.</h3>
      </div>
    </center>
  <% end %>
<% end %>

<center>
  <div class="mt-4">
    <h1>Job Details</h1>
  </div>
</center>

<div class="container">
  <div class="ftco-section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-9 mb-5">
          <p>
            <h3><%= @job_post.job_title %></h3>
            </h4><%= @job_post.job_type %></h4>
            <spam class="icon-location_city"></spam><%= @job_post.location %>
          </p>
          <div class= "card">
          <div class= "card-header"><p><b>Profile Details</b></p></div>
          <div class= "card-body"><p><%= @job_post.description %></p></div>
          </div>
          <p><b>Salary : </b><%= @job_post.salary_min %> - <%= @job_post.salary_max %></p>
          <% if !@job_post.language.blank? %>
          <p><b>Preferred Language : </b><%= @job_post.language %></p>
          <% end %>
          <% if !@job_post.required_skill.blank? %>
          <p><b>Required Skills </b><%= @job_post.required_skill %></p>
          <% end %>
          <% if !@job_post.extra_skill.blank? %>
          <p><b>Extra Skills </b><%= @job_post.extra_skill %></p>
          <% end %>
          <% if !@job_post.last_apply_date&.strftime("%d %b, %Y").blank? %>
          <p><b>Last date to apply is <%= @job_post.last_apply_date&.strftime("%d %b, %Y") %><p>
          <% end %>
          <% if user_signed_in? %>
           <% if current_user %>
              <% if !@applied.any? %>
                <% if current_user.has_role? :job_seeker %>
                  <center>
                  <%= link_to 'Apply Job', apply_job_user_job_post_path(current_user, @job_post), class: "btn btn-primary" %>
                  </center>
              <% end %>
            <% end %>
            <%end%>
          <% else %>
            <%= link_to "Apply Job", new_user_session_path, class: "btn btn-primary"%>
          <% end %>
        </div>
        <div class="col-lg-3">
          <div class="p-4 mb-3 bg-white">
            <h3 class="h5 text-black mb-3">Company Info</h3>
            <p class="mt-3">
            <h3><%= @job_post.company.title %></h3>
            <p>
              <p class="mb-0 font-weight-bold">Address</p>
              <p class="mb-4"><%= @job_post.company.address %> <%= @job_post.company.city %></p>

              <p class="mb-0 font-weight-bold">Phone</p>
              <p class="mb-4"><%= @job_post.company.contact_no %></p>

              <p class="mb-0 font-weight-bold">Email Address</p>
              <p class="mb-4"><%= @job_post.company.email %></p>

              <p class="mb-0 font-weight-bold">Website</p>
              <p class="mb-0"><a href="https://<%= @job_post.company.website %>"><%= @job_post.company.website %></a>
            </p>
            <%= link_to "Show more ", company_path(@job_post.company_id), class: 'btn btn-primary'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
