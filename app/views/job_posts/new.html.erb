<div class="container">
  <div class="ftco-section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-8 mb-5">
          <h2> Post a Job </h2>
          <%= render 'form', job_post: @job_post %>
        </div>
        <div class="col-lg-4">
          <div class="p-4 mb-3 bg-white">
            <h3 class="h5 text-black mb-3">Company Info</h3>
            <p class="mt-3">
            <h3><%= current_company.title %></h3>
            <p>
              <p class="mb-0 font-weight-bold">Address</p>
              <p class="mb-4"><%= current_company.address %> <%= current_company.city %></p>

              <p class="mb-0 font-weight-bold">Phone</p>
              <p class="mb-4"><%= current_company.contact_no %></p>

              <p class="mb-0 font-weight-bold">Email Address</p>
              <p class="mb-4"><%= current_company.email %></p>

              <p class="mb-0 font-weight-bold">Website</p>
              <p class="mb-0"><%= current_company.website %></p>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>