<div class="hero-wrap js-fullheight" style="background-image: url(assets/bg_2.jpg);"
  data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start"
      data-scrollax-parent="true">
      <div class="col-xl-10 ftco-animate mb-5 pb-5" data-scrollax=" properties: { translateY: '70%' }">
        <p class="mb-4 mt-5 pt-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">We have <span
            class="number" data-number="850000"><%= @count %></span> great job offers you deserve!</p>
        <h1 class="mb-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Your Dream <br><span>Job is
            Waiting</span></h1>
        <div class="ftco-search">
          <div class="row">
            <div class="col-md-12 nav-link-wrap">
              <div class="nav nav-pills text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active mr-md-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab"
                  aria-controls="v-pills-1" aria-selected="true">Find a Job</a>
              </div>
            </div>          
            <div class="col-md-10 tab-wrap">
              <div class="tab-content p-4" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel"
                  aria-labelledby="v-pills-nextgen-tab">
                  <%= form_with(url: job_posts_search_path, method: :get, local: true) do |form| %>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <div class="form-field">
                            <%= form.select :job_title, options_from_collection_for_select(JobPost.select(:job_title).distinct, :job_title, :job_title), {prompt: "---Job Post---"}, class: "form-control" %>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <div class="form-field">
                            <%= form.select :location, options_from_collection_for_select(JobPost.select(:location).distinct, :location, :location), {prompt: "---Location---", disabled: "Location"}, class: "form-control" %>
                          </div>
                        </div>
                      </div>
                      <div class="col-md">
                        <div class="form-group">
                          <div class="form-field">
                            <%= form.submit 'Search', class: "btn btn-primary btn-block", id: "search" %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
<%= render 'job_posts/job_posts_list'%>

<%= render 'layouts/footer'%>

