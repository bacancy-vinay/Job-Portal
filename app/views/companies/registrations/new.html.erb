<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-top">
    <div class="col-10 col-md-8 col-lg-6">
      <div class="container mt-5">
        <h2>Company Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :Name %>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :About %>
          <%= f.text_area :about, autofocus: true, autocomplete: "about", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Address %>
          <%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :City %>
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :State %>
          <%= f.text_field :state, autofocus: true, autocomplete: "state", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Country %>
          <%= f.text_field :country, autofocus: true, autocomplete: "country", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Pincode %>
          <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Contact_no %>
          <%= f.text_field :contact_no, autofocus: true, autocomplete: "contact_no", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Website %>
          <%= f.text_field :website, autofocus: true, autocomplete: "website", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Status %>
          <%= f.select(:status, Company.statuses.keys, {prompt: 'Select Field'}, class: 'form-control' )%>
        </div>


        <div class="form-group">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
        <% end %>

        <%= render "companies/shared/links" %>
      </div>
    </div>
  </div>
</div>