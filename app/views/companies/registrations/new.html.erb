<div class="container mt-5">
  <h2>Company Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :Company_logo, class: "col-form-label col-sm-2"%>
    <div class="col-sm-10">
      <%= f.file_field :logo, class: "form-control"%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Name, class: "col-form-label col-sm-2"%>
    <div class="col-sm-10">
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Email , class: "col-form-label col-sm-2"%><br />
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Password, class: "col-form-label col-sm-2"%>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
      <% if @minimum_password_length %>
      <i>(leave blank if you don't want to change it)</i>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Password_confirmation, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :About, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.rich_text_area :about %>
    </div>
  </div>
  <!--Addresss information------------------------->
  <h3>Address Information</h3>

  <div class="form-group row">
    <%= f.label :Address, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
    </div>

  </div>
  <div class="form-group row">
    <%= f.label :City, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :city, autofocus: true, autocomplete: "city", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :State, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :state, autofocus: true, autocomplete: "state", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :County, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :country, autofocus: true, autocomplete: "country", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Pincode, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", class: 'form-control' %>
    </div>
  </div>

  <!--End of address----------------->

  <!--Contact Information------------>
  <h3>Contact Information</h3>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <span class="icon-facebook"></span>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :facebook, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <span class="icon-instagram"></span>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :instagram, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <span class="icon-linkedin"></span>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :linkedin, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <span class="icon-phone"></span>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :contact_no, autofocus: true, autocomplete: "contact_no", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">

    <div class="col-form-label col-sm-2">
      website
      <span class="icon-link2"></span>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :website, autofocus: true, autocomplete: "website", class: 'form-control' %>
    </div>
  </div>
  <!---end of social links --->

  <div class="form-group row">
    <%= f.hidden_field :status %>
  </div>


  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
  <% end %>

  <%= render "companies/shared/links" %>
</div>