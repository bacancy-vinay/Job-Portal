<div class = "container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :about %>
  <%= f.text_area :about, autofocus: true, autocomplete: "about", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :address %>
  <%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, autofocus: true, autocomplete: "city", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state, autofocus: true, autocomplete: "state", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :country %>
  <%= f.text_field :country, autofocus: true, autocomplete: "country", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :pincode %>
  <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :contact_no %>
  <%= f.text_field :contact_no, autofocus: true, autocomplete: "contact_no", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :website %>
  <%= f.text_field :website, autofocus: true, autocomplete: "website", class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :status %>
  <%= f.select(:status, Company.statuses.keys, {prompt: 'Select Field'}, class: 'form-control' )%>
</div>


  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "companies/shared/links" %>
</div>
