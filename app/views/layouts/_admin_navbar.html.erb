  </div>
</nav>
</div>
    <!-- Page Content -->
<div id="content">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <i class="fa fa-chevron-circle-right fa-2x" onclick="myFunction()"></i>
        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <i class="fas fa-align-justify"></i>
        </button>
        <h3 class="pageheader_title" style="margin-left: 10px;" ><%= @page_title %></h3>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="nav navbar-nav ml-auto">
            <% if user_signed_in?%>
              <li class=nav-item><%= link_to "Account", edit_user_registration_path, class: "active"%> </li>
              <li class=nav-item><span class="fa fa-sign-out"></span>
                <%= link_to "sign out", destroy_user_session_path , method: :delete %></li>
            <%else%>
              <li class=nav-item><%= link_to "Sign Up", new_user_registration_path,class: "active" %></li>
              <li class=nav-item><%= link_to "Sign In", new_user_session_path,class: "active" %></li>
            <%end%>
          </ul>
        </div>
      </div>
  </nav>
</div>
</div>
